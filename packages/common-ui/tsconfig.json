{
	"extends": "@repo/typescript-config/react.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"~/components/*": ["./src/components/*"],
			"~/styles/*": ["./src/styles/*"],
			"~/hooks/*": ["./src/hooks/*"],
			"~/types/*": ["./src/types/*"],
			"~/utils/*": ["./src/utils/*"]
		},
		"declaration": true,
		"outDir": "dist"
	},
	"include": ["src/**/*", ".storybook/**/*", "components.json", "src/types/**/*.d.ts"],
	"exclude": ["dist", "node_modules"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
