{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"types": ["vitest/globals", "@testing-library/jest-dom"]
	},
	"include": [
		"src",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		".storybook/*.ts",
		".storybook/**/*.ts"
	]
}
