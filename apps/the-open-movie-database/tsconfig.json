{
	"extends": "@repo/typescript-config/react.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"~/components/*": ["./src/components/*"],
			"~/hooks/*": ["./src/hooks/*"],
			"~/services/*": ["./src/services/*"],
			"~/types/*": ["./src/types/*"],
			"~/utils/*": ["./src/utils/*"],
			"~/assets/*": ["./src/assets/*"],
			"~/test/*": ["./src/test/*"]
		},
		"typeRoots": ["../../packages/typescript-config/types", "./node_modules/@types"],
		"types": ["@total-typescript/ts-reset", "vitest/globals", "@testing-library/jest-dom"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"../../packages/typescript-config/types/**/*.d.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
